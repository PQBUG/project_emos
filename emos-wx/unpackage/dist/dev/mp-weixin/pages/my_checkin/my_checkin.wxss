.statistics {
  margin-bottom: 50rpx;
}
.statistics .big-icon {
  width: 250rpx;
  display: block;
  margin-left: auto;
  margin-right: auto;
  margin-top: 40rpx;
}
.statistics .report-title {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  margin-top: 20rpx;
}
.statistics .report-title .days {
  font-size: 60rpx;
  color: #333;
}
.statistics .report-title .unit {
  margin-left: 10rpx;
  margin-top: 33rpx;
  color: #333;
}
.statistics .sub-title {
  font-size: 34rpx;
  color: #333;
  text-align: center;
  margin-top: 10rpx;
}
.statistics .report {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  margin-top: 30rpx;
}
.statistics .report .column {
  -webkit-box-flex: 1;
  -webkit-flex-grow: 1;
          flex-grow: 1;
  -webkit-flex-shrink: 1;
          flex-shrink: 1;
  color: #fff;
  padding-top: 20rpx;
  padding-bottom: 15rpx;
}
.statistics .report .column .column-title {
  display: block;
  text-align: center;
  font-size: 30rpx;
  margin-bottom: 5rpx;
}
.statistics .report .column .number {
  display: block;
  text-align: center;
  font-size: 30rpx;
}

